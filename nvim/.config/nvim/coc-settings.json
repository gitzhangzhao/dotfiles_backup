{
  "coc.preferences.messageLevel": "error",
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,

  "suggest.noselect": true,

  "diagnostic.enableMessage": "never",
  "diagnostic.virtualTextFormat": "[%source] %message",
  "diagnostic.errorSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.virtualText": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.separateRelatedInformationAsDiagnostics": true,

  "inlayHint.display": false,

  "signature.preferShownAbove": false,

  "semanticTokens.enable": true,
  "signature.target": "float",

  "colors.enable": true,
  "suggest.floatConfig": { "border": true, "rounded": true },
  "hover.floatConfig": { "border": true, "rounded": true },
  "signature.floatConfig": { "border": true, "rounded": true },

  "snippets.ultisnips.pythonPrompt": false,

  "sumneko-lua.enableNvimLuaDev": true,

  "languageserver": {
      "veridian": {
          "command": "veridian",
          "filetypes": ["systemverilog", "verilog"]
      }
  },

  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/15.0.6/clangd_15.0.6/bin/clangd"

  }
